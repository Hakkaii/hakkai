| <?xml version='1.0' encoding='utf-8'?>
rss version="2.0"
  channel
    title Hakkai
    description
    pubDate == Date.today
    lastBuildDate == @posts[0].created_at
    - if @posts
      - @posts.each do |post|
        item
          title = post.title
          == link "http://localhost/posts/#{post.token}"
          - if post.content.blank?
            description == "<![CDATA[#{post.link}]]>"
          - else
            description == "<![CDATA[#{markdown(post.content)}]]>"
          pubDate == post.created_at
